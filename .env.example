# -----------------------------------------------------------------------------
# Payment Processing Fees
# -----------------------------------------------------------------------------
# Credit card non-cash adjustment (0.04 = 4%)
PAYMENT_CREDIT_CARD_FEE=0.04

# Payment plan setup fee (in dollars)
PAYMENT_PLAN_SETUP_FEE=15.00

# Payment Plan Interest Rates (decimal format: 0.03 = 3%)
# Tier 1: High down payment (>30%)
PLAN_RATE_T1_SHORT=0.020
PLAN_RATE_T1_MEDIUM=0.035
PLAN_RATE_T1_LONG=0.050

# Tier 2: Standard down payment (15-30%)
PLAN_RATE_T2_SHORT=0.030
PLAN_RATE_T2_MEDIUM=0.050
PLAN_RATE_T2_LONG=0.070

# Tier 3: Low down payment (<15%)
PLAN_RATE_T3_SHORT=0.045
PLAN_RATE_T3_MEDIUM=0.070
PLAN_RATE_T3_LONG=0.090

# Tier thresholds (percentage as decimal: 0.30 = 30%)
TIER_HIGH_THRESHOLD=0.30
TIER_STANDARD_THRESHOLD=0.15

# Duration thresholds (in months)
DURATION_SHORT_MAX=6
DURATION_MEDIUM_MAX=12

# -----------------------------------------------------------------------------
# Payment Options
# -----------------------------------------------------------------------------
# Enable/disable payment methods (true/false)
ENABLE_CREDIT_CARD=true
ENABLE_ACH=true
ENABLE_CHECK=true
ENABLE_PAYMENT_PLANS=true

# Payment plan defaults (percentage as decimal: 0.20 = 20%)
DEFAULT_DOWN_PAYMENT=0.20
MINIMUM_DOWN_PAYMENT=0.10
MAXIMUM_DOWN_PAYMENT=0.90

# Maximum installments by frequency
MAX_INSTALLMENTS_WEEKLY=52
MAX_INSTALLMENTS_BIWEEKLY=26
MAX_INSTALLMENTS_MONTHLY=24

# Payment flow options
REQUIRE_PROJECT_ACCEPTANCE=true
ALLOW_PARTIAL_PAYMENTS=false
MINIMUM_PAYMENT_AMOUNT=10.00

# Account type availability
ENABLE_BUSINESS_ACCOUNTS=true
ENABLE_PERSONAL_ACCOUNTS=true

# -----------------------------------------------------------------------------
# PracticeCS SQL Server Database Configuration
# -----------------------------------------------------------------------------
# ⚠️ DEVELOPMENT MODE: sqlsrv connection currently points to CSP_345844_TestDoNotUse
# The 'sqlsrv' connection is configured for the test database to allow safe development
# 
# IMPORTANT: All database interactions (read/write) currently use the test database
# This is intentional for development and testing purposes.
